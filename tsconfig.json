{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "outDir": "./dist",  // Compiled JS will go to the 'dist' directory.
        "rootDir": "./src",  // TS looks for source files in 'src'.
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}